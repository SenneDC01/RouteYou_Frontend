{
  "extends": [
    "next/core-web-vitals",
    "plugin:@next/next/recommended",
    "eslint:recommended"
  ],
  "plugins": ["no-comment"],
  "rules": {
    "prefer-const": "error",
    "no-console": "warn",
    "no-warning-comments": "warn",
    "no-comment/no-comment-line": "warn",
    "no-comment/no-comment-block": "warn",
    "no-useless-escape": "off"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es2023": true,
    "jest": true
  },
  "ignorePatterns": ["node_modules/", "build/"]
}
